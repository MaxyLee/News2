<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/NoTitleTranslucentTheme"
    android:id="@+id/news"
    android:background="@color/colorBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/nTitle"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:padding="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorText"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/nImage"/>
                <TextView
                    android:id="@+id/nPublisher"
                    android:gravity="left"
                    android:paddingLeft="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/nTime"
                    android:gravity="left"
                    android:paddingLeft="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/nImage"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/nTime"
                    app:layout_constraintBottom_toTopOf="@+id/nVideo"/>
                <VideoView
                    android:id="@+id/nVideo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/nImage"
                    app:layout_constraintBottom_toTopOf="@+id/nNews"/>
                <ProgressBar
                    android:id="@+id/nprogressBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />
                <TextView
                    android:id="@+id/nNews"
                    android:textSize="16sp"
                    android:textColor="@color/colorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    app:layout_constraintTop_toBottomOf="@+id/nVideo"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/rec1"
                    android:layout_width="match_parent"
                    android:layout_height="236dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="16dp"
                    app:cardBackgroundColor="@color/colorWhite">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorBackground"
                        android:layout_gravity="center">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="180dp">

                            <ImageView
                                android:id="@+id/image1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="center"
                                android:src="@mipmap/logo3"
                                />
                            <TextView
                                android:id="@+id/time1"
                                android:textColor="@color/colorWhite"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:gravity="left"
                                android:layout_gravity="top"
                                android:text="Time???"/>
                            <TextView
                                android:id="@+id/title1"
                                android:textSize="16sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:layout_gravity="bottom"
                                android:padding="6dp"
                                android:background="#99d1d1d1"
                                android:gravity="center|left"/>
                            <ImageButton
                                android:id="@+id/btn_star1"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/star_border"
                                android:layout_gravity="right"
                                android:background="#00FFFFFF"
                                android:clickable="false"/>

                        </FrameLayout>
                        <TextView
                            android:id="@+id/text1"
                            android:textColor="@color/colorText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/rec2"
                    android:layout_width="match_parent"
                    android:layout_height="236dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="16dp"
                    app:cardBackgroundColor="@color/colorWhite">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorBackground"
                    android:layout_gravity="center">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="180dp">

                        <ImageView
                            android:id="@+id/image2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="center"
                            android:src="@mipmap/logo3"
                            />
                        <TextView
                            android:id="@+id/time2"
                            android:textColor="@color/colorWhite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:gravity="left"
                            android:layout_gravity="top"
                            android:text="Time???"/>
                        <TextView
                            android:id="@+id/title2"
                            android:textSize="16sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite"
                            android:layout_gravity="bottom"
                            android:padding="6dp"
                            android:background="#99d1d1d1"
                            android:gravity="center|left"/>
                        <ImageButton
                            android:id="@+id/btn_star2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/star_border"
                            android:layout_gravity="right"
                            android:background="#00FFFFFF"
                            android:clickable="false"/>

                    </FrameLayout>
                    <TextView
                        android:id="@+id/text2"
                        android:textColor="@color/colorText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/rec3"
                    android:layout_width="match_parent"
                    android:layout_height="236dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="16dp"
                    app:cardBackgroundColor="@color/colorWhite">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorBackground"
                    android:layout_gravity="center">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="180dp">

                        <ImageView
                            android:id="@+id/image3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="center"
                            android:src="@mipmap/logo3"
                            />
                        <TextView
                            android:id="@+id/time3"
                            android:textColor="@color/colorWhite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:gravity="left"
                            android:layout_gravity="top"
                            android:text="Time???"/>
                        <TextView
                            android:id="@+id/title3"
                            android:textSize="16sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite"
                            android:layout_gravity="bottom"
                            android:padding="6dp"
                            android:background="#99d1d1d1"
                            android:gravity="center|left"/>
                        <ImageButton
                            android:id="@+id/btn_star3"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/star_border"
                            android:layout_gravity="right"
                            android:background="#00FFFFFF"
                            android:clickable="false"/>

                    </FrameLayout>
                    <TextView
                        android:id="@+id/text3"
                        android:textColor="@color/colorText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@android:drawable/ic_menu_share"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintVertical_bias="0.98"/>

</androidx.constraintlayout.widget.ConstraintLayout>